{
    "name": "maymeow/cake-authorization",
    "description": "MayMeow/Authorization plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "cakephp/authentication": "^2.0",
        "cakephp/cakephp": "~4.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3",
        "phpstan/phpstan": "^1.8",
        "cakephp/cakephp-codesniffer": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "MayMeow\\Authorization\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MayMeow\\Authorization\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "App\\": "tests/test_app/src/"
        }
    },
    "scripts": {
        "stan": "phpstan analyse",
        "cs-check": "phpcs --colors -p  src/",
        "cs-fix": "phpcbf --colors -p  src/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
